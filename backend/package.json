{
  "name": "tcf_backend",
  "version": "1.0.0",
  "description": "Express backend for TCF Project",
  "author": "see repository",
  "main": "dist/server.js",
  "scripts": {
    "start": "tsc && node dist/src/server.js",
    "start:watch": "nodemon",
    "build": "tsc",
    "test": "jest"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "npm start",
    "ext": "ts"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/*.ts",
      "!**/node_modules/**",
      "!**/dist/**",
      "!**/coverage/**"
    ],
    "preset": "ts-jest",
    "testPathIgnorePatterns": ["dist"]

  },
  "dependencies": {
    "express": "^4.16.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.1",
    "@types/node": "^20.1.2",
    "@types/supertest": "^2.0.12",
    "jest": "^29.5.0",
    "nodemon": "^2.0.22",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  }
}
